---
title: <%= title %>
---

<style> 
          #wrapper {overflow-y: scroll;
overflow-x: hidden;
            height: 400px;
          }
        </style> 

<div class="container-fluid">
<div class="row">
<ol class="breadcrumb hidden-xs">
  <li><a href="/chess/tournaments.html">My Tournaments</a></li>
  <li><a href="/chess<%= tournament %>"><%= tournament_name %></a></li>
  <li class="active"><%= game.white %> - <%= game.black %></li>
</ol>

<script src="../javascripts/pgn4web.js" type="text/javascript"></script>
<script src="../fonts/chess-informant-NAG-symbols.js" type="text/javascript"></script>

<script type="text/javascript">
    "use strict";
    SetPgnUrl("<%= game.pgn %>");
    SetImagePath("../images/pgn4web/alpha/48");
    SetImageType("png");
    SetShortcutKeysEnabled(true);
    SetHighlightOption(true);
    SetCommentsIntoMoveText(true);
    SetCommentsOnSeparateLines(true);
    SetGameSelectorOptions("Select game...", false, 0, 0, 0, 15, 15, 0, 0);
</script>

<div class="col-sm-4" style="width: 400px;position:fixed;background-color: white;z-index: 3;">
<div class="row">
    <div id="GameSelector"></div>
    <p></p>
    <div id="GameBoard"></div>
    <p></p>
    <div id="GameButtons"></div>
</div>
<!-- 
<div class="row">
    Current Move: <span id="GameLastMove"></span>
</div>
-->

<div class="row hidden-xs" style="padding-top:30px;padding-bottom:30px;">
    <div id="wrapper"  style="padding-bottom:30px;">
        <% if game.errors %>
        <h2>Mistakes</h2>
        <ul>
            <% game.errors.each do |error| %>
            <li><%= error %></li>
            <% end %>
        </ul>
        <% end %>
        <% if game.conclusions %>
        <h2>Conclusions</h2>
        <ul>
            <% game.conclusions.each do |conclusion| %>
            <li><%= conclusion %></li>
            <% end %>
        </ul>
        <% end %>
    </div>
</div>
</div>

<div class="visible-xs col-sm-8 col-sm-offset-1" style="padding-top:440px;overflow:scroll;z-index: 2;">
    <b><span class="GameWhite"></span>&nbsp;-&nbsp;<span class="GameBlack"></span>&nbsp;&nbsp;<span class="GameResult"></span></b>
    <div class="GameText"></div>
    <div class="row ">
    <% if game.errors %>
    <h2>Mistakes</h2>
    <ul>
        <% game.errors.each do |error| %>
        <li><%= error %></li>
        <% end %>
    </ul>
    <% end %>
    <% if game.conclusions %>
    <h2>Conclusions</h2>
    <ul>
        <% game.conclusions.each do |conclusion| %>
        <li><%= conclusion %></li>
        <% end %>
    </ul>
    <% end %>
</div>
</div>
<div class="hidden-xs col-sm-8 col-sm-offset-6">
    <b><span class="GameWhite"></span>&nbsp;-&nbsp;<span class="GameBlack"></span>&nbsp;&nbsp;<span class="GameResult"></span></b>
    <div class="GameText"></div>
</div>

</div>
</div>